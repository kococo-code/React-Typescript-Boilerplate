{
  "compilerOptions": {   
    "target": "es6",                         
    "module": "commonjs",                     
    "lib": [
      "ES2015",
      "ES2017",
      "DOM"
    ],                            
    "jsx": "react",                  
    "sourceMap": true,                    
    "removeComments": true,               
    "strict": true,                         
    "baseUrl": "./",                     
    "paths": {
      "components/*" : [
        "src/components/*"
      ]
    },                          
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true  
  }
  
}
